# =============================================================================
# EduStream Frontend - Environment Template
# =============================================================================
# Copy to .env.local and fill in your values
# Next.js loads: .env.local > .env.development/.env.production > .env

# =============================================================================
# API CONFIGURATION (Required)
# =============================================================================

# Backend API URL
# Development: http://localhost:8000
# Production: https://api.valsa.solutions
NEXT_PUBLIC_API_URL=http://localhost:8000

# =============================================================================
# STRIPE PAYMENT INTEGRATION
# =============================================================================

# Stripe publishable key (safe to expose in browser)
# Get from: https://dashboard.stripe.com/apikeys
# Use pk_test_... for development, pk_live_... for production
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_51QfiqsP0KWjLqj7YourStripePublishableKeyHere

# =============================================================================
# GOOGLE OAUTH AUTHENTICATION
# =============================================================================

# Google OAuth Client ID
# Get from: https://console.cloud.google.com/apis/credentials
NEXT_PUBLIC_GOOGLE_CLIENT_ID=87651593504-6q57onf8u3ibpk6vb5k8u39eqgr26bj8.apps.googleusercontent.com

# =============================================================================
# SENTRY ERROR MONITORING
# =============================================================================

# Sentry DSN for error tracking (leave empty to disable)
# Get from: https://sentry.io/settings/projects/YOUR_PROJECT/keys/
NEXT_PUBLIC_SENTRY_DSN=

# For source map upload (optional, CI/CD only)
# SENTRY_AUTH_TOKEN=
# SENTRY_ORG=your-org
# SENTRY_PROJECT=edustream-frontend

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Enable/disable features
NEXT_PUBLIC_PAYMENTS_ENABLED=true
NEXT_PUBLIC_GOOGLE_AUTH_ENABLED=true
NEXT_PUBLIC_ZOOM_ENABLED=true

# =============================================================================
# DEBUG SETTINGS
# =============================================================================

# Enable debug logging in browser console
NEXT_PUBLIC_DEBUG=false
NEXT_PUBLIC_LOG_LEVEL=INFO

# =============================================================================
# ENVIRONMENT
# =============================================================================

# Node environment (development/production/test)
NODE_ENV=development
