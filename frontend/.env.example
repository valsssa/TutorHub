# EduStream TutorConnect - Frontend Environment Configuration
# Copy this file to .env.local and fill in your actual values

# =============================================================================
# API CONFIGURATION
# =============================================================================

# Backend API URL
# Development: http://localhost:8000
# Production: https://api.valsa.solutions
NEXT_PUBLIC_API_URL=http://localhost:8000

# =============================================================================
# STRIPE PAYMENT INTEGRATION
# =============================================================================

# Stripe publishable key (safe to expose in browser)
# Get from: https://dashboard.stripe.com/apikeys
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key

# =============================================================================
# GOOGLE OAUTH AUTHENTICATION
# =============================================================================

# Google OAuth Client ID
# Get from: https://console.cloud.google.com/apis/credentials
NEXT_PUBLIC_GOOGLE_CLIENT_ID=your_google_client_id.apps.googleusercontent.com

# =============================================================================
# SENTRY ERROR MONITORING
# =============================================================================
# Get your DSN from: https://sentry.io/settings/projects/YOUR_PROJECT/keys/

# Sentry DSN for error tracking (leave empty to disable)
NEXT_PUBLIC_SENTRY_DSN=

# For source map upload (optional, for production builds)
# SENTRY_AUTH_TOKEN=
# SENTRY_ORG=your-org
# SENTRY_PROJECT=edustream-frontend

# =============================================================================
# OPTIONAL SETTINGS
# =============================================================================

# Enable debug logging in browser console
# NEXT_PUBLIC_DEBUG=true

# Enable/disable features
NEXT_PUBLIC_PAYMENTS_ENABLED=true
NEXT_PUBLIC_GOOGLE_AUTH_ENABLED=true
NEXT_PUBLIC_ZOOM_ENABLED=true
