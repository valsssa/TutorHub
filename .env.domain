# =============================================================================
# EduStream Environment Configuration - DOMAIN
# =============================================================================
# Use this for domain-based deployment (edustream.valsa.solutions)
# To activate: cp .env.domain .env

# -----------------------------------------------------------------------------
# Database Configuration
# -----------------------------------------------------------------------------
POSTGRES_DB=authapp
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres

# -----------------------------------------------------------------------------
# MinIO (Object Storage) Configuration
# -----------------------------------------------------------------------------
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin123
MINIO_ENDPOINT=https://minio.valsa.solutions
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin123
MINIO_BUCKET=tutor-assets
MINIO_USE_SSL=false
MINIO_PUBLIC_ENDPOINT=https://minio.valsa.solutions

# -----------------------------------------------------------------------------
# Backend API Configuration
# -----------------------------------------------------------------------------
SECRET_KEY=your-secret-key-change-in-production-use-strong-random-value
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
BCRYPT_ROUNDS=12

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
REGISTRATION_RATE_LIMIT_PER_MINUTE=5
LOGIN_RATE_LIMIT_PER_MINUTE=10

# Application Environment
ENVIRONMENT=development
LOG_LEVEL=INFO

# Default Users
DEFAULT_ADMIN_EMAIL=admin@example.com
DEFAULT_ADMIN_PASSWORD=admin123
DEFAULT_TUTOR_EMAIL=tutor@example.com
DEFAULT_TUTOR_PASSWORD=tutor123
DEFAULT_STUDENT_EMAIL=student@example.com
DEFAULT_STUDENT_PASSWORD=student123

# -----------------------------------------------------------------------------
# CORS Configuration - DOMAIN
# -----------------------------------------------------------------------------
CORS_ORIGINS=https://edustream.valsa.solutions

# -----------------------------------------------------------------------------
# Frontend Configuration - DOMAIN
# -----------------------------------------------------------------------------
NEXT_PUBLIC_API_URL=https://api.valsa.solutions
NODE_ENV=production
